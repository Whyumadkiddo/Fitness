<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fitnes.AddWorkoutController" alignment="CENTER" spacing="10.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Добавить тренировку"/>
    <ComboBox fx:id="clientComboBox" promptText="Выберите клиента"/>
    <ComboBox fx:id="trainerComboBox" promptText="Выберите тренера"/>
    <TextField fx:id="workoutTypeField" promptText="Тип тренировки"/>
    <ComboBox fx:id="workoutTimeComboBox" promptText="Время тренировки"/>
    <Button text="Сохранить" onAction="#onSaveWorkoutButtonClick"/>
</VBox>
