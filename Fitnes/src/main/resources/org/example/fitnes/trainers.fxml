<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fitnes.TrainersController" alignment="CENTER" spacing="10.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Тренеры и их клиенты"/>
    <TableView fx:id="trainersTableView">
        <columns>
            <TableColumn text="Тренер" fx:id="trainerColumn"/>
            <TableColumn text="Клиент" fx:id="clientColumn"/>
            <TableColumn text="Тип тренировки" fx:id="workoutTypeColumn"/>
            <TableColumn text="Время тренировки" fx:id="workoutTimeColumn"/>
        </columns>
    </TableView>
    <Button text="Добавить тренировку" onAction="#onAddWorkoutButtonClick"/>
    <Button text="Добавить клиента" onAction="#onAddClientButtonClick"/>
</VBox>
